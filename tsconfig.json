{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "ims-chain": ["packages/ims-chain"],
      "ims-util": ["packages/ims-util"],
      "ims-core": ["packages/ims-core"]
    },
    "lib": ["dom", "es2016.array.include", "esnext"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["packages", "test", "src", "tools"]
}
