{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "ims-chain": ["packages/ims-chain/src"],
      "ims-chain/*": ["packages/ims-chain/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["packages", "test", "src"]
}
