{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": false,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strictBindCallApply": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "jsx": "react",
    "jsxFactory": "createElement",
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "watch": true,
    "paths": {
      "ims-chain": ["packages/ims-chain/src/ims-chain"],
      "ims-util": ["packages/ims-util/src/index"],
      "ims-core": ["packages/ims-core/src/index"],
      "ims-cli": ["packages/ims-cli/src/index"],
      "ims-block": ["packages/ims-block/src/ims-block"],
      "ims-peer": ["packages/ims-peer/src/ims-peer"],
      "ims-rxjs": ["packages/ims-rxjs/src/ims-rxjs"],
      "ims-nest": ["packages/ims-nest/src/ims-nest"],
      "ims-typeorm": ["packages/ims-typeorm/src/ims-typeorm"],
      "ims-decorator": ["packages/ims-decorator/src/index"],
      "ims-redis": ["packages/ims-redis/src/ims-redis"],
      "ims-security": ["packages/ims-security/src/ims-security"],
      "ims-transaction": ["packages/ims-transaction/src/ims-transaction"],
      "ims-consensus": ["packages/ims-consensus/src/ims-consensus"],
      "ims-grpc": ["packages/ims-grpc/src/ims-grpc"],
      "ims-cache": ["packages/ims-cache/src/ims-cache"],
      "ims-error": ["packages/ims-error/src/ims-error"],
      "ims-crypto": ["packages/ims-crypto/src/ims-crypto"],
      "ims-peer-id": ["packages/ims-peer-id/src/ims-peer-id"],
      "ims-peer-info": ["packages/ims-peer-info/src/ims-peer-info"],
      "ims-install": ["packages/ims-install/src/ims-install"],
      "ims-const": ["packages/ims-const/src/ims-const"],
      "ims-fs": ["packages/ims-fs/src/ims-fs"],
      "ims-os": ["packages/ims-os/src/ims-os"],
      "ims-scripts": ["packages/ims-scripts/src/ims-scripts"],
      "ims-multiaddr": ["packages/ims-multiaddr/src/index"],
      "ims-child_process": ["packages/ims-child_process/src/index"],
      "ims-webpack-util": ["packages/ims-webpack-util/src/index"],
      "ims-webpack-manifest": ["packages/ims-webpack-manifest/src/index"],
      "ims-server": ["packages/ims-server/src/index"],
      "ims-level": ["packages/ims-level/src/index"],
      "ims-gulp": ["packages/ims-gulp/src/index"],
      "ims-protocol": ["packages/ims-protocol/src/index"],
      "ims-mongo": ["packages/ims-mongo/src/index"],
      "ims-tcp-server": ["packages/ims-tcp-server/src/index"],
      "ims-tcp-client": ["packages/ims-tcp-client/src/index"],
      "ims-udp-server": ["packages/ims-udp-server/src/index"],
      "ims-udp-client": ["packages/ims-udp-client/src/index"],
      "ims-http": ["packages/ims-http/src/index"],
      "ims-ws-server": ["packages/ims-ws-server/src/index"],
      "ims-ws-client": ["packages/ims-ws-client/src/index"],
      "ims-p2p-server": ["packages/ims-p2p-server/src/index"],
      "ims-p2p-client": ["packages/ims-p2p-client/src/index"],
      "@angular/core": ["packages/ims-ng-core/src/core"],
      "ims-ng-core": ["packages/ims-ng-core/src/core"],
      "ims-injector": ["packages/ims-injector/src/index"],
      "ims-platform-browser": ["packages/ims-platform-browser/src/index"],
      "ims-platform-node": ["packages/ims-platform-node/src/index"],
      "ims-platform-wxapp": ["packages/ims-platform-wxapp/src/index"],
      "ims-platform-electron": ["packages/ims-platform-electron/src/index"],
      "ims-platform-android": ["packages/ims-platform-android/src/index"],
      "ims-platform-ios": ["packages/ims-platform-ios/src/index"]
    },
    "lib": ["dom", "es2017", "es2016.array.include", "esnext"],
    "types": ["node", "reflect-metadata", "ip", "zone.js"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "docker",
    "static",
    "www",
    "_book"
  ],
  "include": [
    "packages/ims-types/src/*.d.ts",
    "packages/**/*.ts",
    "src",
    "demo"
  ]
}
