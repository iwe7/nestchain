{
  "name": "root",
  "private": true,
  "scripts": {
    "ts:client": "yarn ts src/client/main.ts",
    "ts:server": "yarn ts src/server/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register packages/ims-chain/src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "ts": "ts-node -r tsconfig-paths/register",
    "p2p": "yarn ts packages/ims-p2p/src/main.ts",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/microservices": "^5.4.0",
    "@nestjs/typeorm": "^5.2.2",
    "@nestjs/websockets": "^5.5.0",
    "@types/axios": "^0.14.0",
    "@types/bignumber.js": "^5.0.0",
    "@types/ioredis": "^4.0.4",
    "@types/memcached": "^2.2.5",
    "@types/mongoose": "^5.3.5",
    "@types/mosca": "^2.8.1",
    "@types/mqtt": "^2.5.0",
    "@types/qs": "^6.5.1",
    "@types/ramda": "^0.25.45",
    "@types/request": "^2.48.1",
    "@types/scc-broker-client": "^6.1.0",
    "@types/socket.io": "^2.1.2",
    "@types/socketcluster": "^14.0.1",
    "@types/socketcluster-server": "^13.1.1",
    "@types/yargs-parser": "^11.0.1",
    "axios": "^0.18.0",
    "bignumber.js": "^8.0.1",
    "grpc": "^1.17.0",
    "ioredis": "^4.3.0",
    "memcached": "^2.2.2",
    "mongoose": "^5.4.0",
    "mosca": "^2.8.3",
    "mqtt": "^2.18.8",
    "qs": "^6.6.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "scc-broker-client": "^6.1.0",
    "socket.io": "^2.2.0",
    "socketcluster": "^14.3.3",
    "socketcluster-server": "^14.4.0",
    "typeorm": "^0.2.9",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "lerna": "^3.0.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
