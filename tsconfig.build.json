{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": false,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strictBindCallApply": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "jsx": "react",
    "jsxFactory": "createElement",
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "watch": true,
    "paths": {
      "ims-chain": ["packages/ims-chain/lib/index"],
      "ims-util": ["packages/ims-util/lib/index"],
      "ims-core": ["packages/ims-core/lib/index"],
      "ims-cli": ["packages/ims-cli/lib/index"],
      "ims-block": ["packages/ims-block/lib/index"],
      "ims-peer": ["packages/ims-peer/lib/index"],
      "ims-rxjs": ["packages/ims-rxjs/lib/index"],
      "ims-nest": ["packages/ims-nest/lib/index"],
      "ims-typeorm": ["packages/ims-typeorm/lib/index"],
      "ims-decorator": ["packages/ims-decorator/lib/index"],
      "ims-redis": ["packages/ims-redis/lib/index"],
      "ims-security": ["packages/ims-security/lib/index"],
      "ims-transaction": ["packages/ims-transaction/lib/index"],
      "ims-consensus": ["packages/ims-consensus/lib/index"],
      "ims-grpc": ["packages/ims-grpc/lib/index"],
      "ims-cache": ["packages/ims-cache/lib/index"],
      "ims-error": ["packages/ims-error/lib/index"],
      "ims-crypto": ["packages/ims-crypto/lib/index"],
      "ims-peer-id": ["packages/ims-peer-id/lib/index"],
      "ims-peer-info": ["packages/ims-peer-info/lib/index"],
      "ims-install": ["packages/ims-install/lib/index"],
      "ims-const": ["packages/ims-const/lib/index"],
      "ims-fs": ["packages/ims-fs/lib/index"],
      "ims-os": ["packages/ims-os/lib/index"],
      "ims-scripts": ["packages/ims-scripts/lib/index"],
      "ims-multiaddr": ["packages/ims-multiaddr/lib/index"],
      "ims-child_process": ["packages/ims-child_process/lib/index"],
      "ims-webpack-util": ["packages/ims-webpack-util/lib/index"],
      "ims-webpack-manifest": ["packages/ims-webpack-manifest/lib/index"],
      "ims-server": ["packages/ims-server/lib/index"],
      "ims-level": ["packages/ims-level/lib/index"],
      "ims-gulp": ["packages/ims-gulp/lib/index"],
      "ims-protocol": ["packages/ims-protocol/lib/index"],
      "ims-mongo": ["packages/ims-mongo/lib/index"],
      "ims-tcp-server": ["packages/ims-tcp-server/lib/index"],
      "ims-tcp-client": ["packages/ims-tcp-client/lib/index"],
      "ims-udp-server": ["packages/ims-udp-server/lib/index"],
      "ims-udp-client": ["packages/ims-udp-client/lib/index"],
      "ims-http": ["packages/ims-http/lib/index"],
      "ims-ws-server": ["packages/ims-ws-server/lib/index"],
      "ims-ws-client": ["packages/ims-ws-client/lib/index"],
      "ims-p2p-server": ["packages/ims-p2p-server/lib/index"],
      "ims-p2p-client": ["packages/ims-p2p-client/lib/index"],
      "@angular/core": ["packages/ims-ng-core/lib/core"],
      "ims-ng-core": ["packages/ims-ng-core/lib/core"],
      "ims-injector": ["packages/ims-injector/lib/index"],
      "ims-platform-browser": ["packages/ims-platform-browser/lib/index"],
      "ims-platform-node": ["packages/ims-platform-node/lib/index"],
      "ims-platform-wxapp": ["packages/ims-platform-wxapp/lib/index"],
      "ims-platform-electron": ["packages/ims-platform-electron/lib/index"],
      "ims-platform-android": ["packages/ims-platform-android/lib/index"],
      "ims-platform-ios": ["packages/ims-platform-ios/lib/index"]
    },
    "lib": ["dom", "es2017", "es2016.array.include", "esnext"],
    "types": ["node", "reflect-metadata", "ip", "zone.js"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "docker",
    "static",
    "www",
    "_book"
  ],
  "include": ["packages", "src", "demo"]
}
